{
  "name": "eth-connect",
  "namespace": "ethereum",
  "version": "0.3.0",
  "description": "Ethereum JavaScript API, middleware to talk to a ethereum node using an async provider",
  "main": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "tsc --project tsconfig-build.json",
    "watch": "tsc --project tsconfig-build.json",
    "lint": "tslint",
    "test": "mocha",
    "coverage": "nyc mocha",
    "test-coveralls": "nyc report --reporter=text-lcov | coveralls --verbose"
  },
  "files": ["dist"],
  "dependencies": {
    "bignumber.js": "^7.0.1",
    "crypto-js": "^3.1.9-1",
    "utf8": "^3.0.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "nyc": {
    "extension": [".ts", ".tsx"],
    "exclude": ["**/*.d.ts"],
    "reporter": ["html", "text"],
    "all": true
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.1.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.1",
    "dcl-tslint-config-standard": "^1.0.1",
    "ganache-cli": "^6.1.0",
    "isomorphic-fetch": "^2.2.1",
    "mocha": "^5.1.1",
    "nyc": "^11.8.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^2.8.3",
    "websocket": "^1.0.26"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/decentraland/web3-ts.git"
  },
  "homepage": "https://github.com/decentraland/web3-ts",
  "bugs": {
    "url": "https://github.com/decentraland/web3-ts/issues"
  },
  "keywords": ["ethereum", "javascript", "API"],
  "license": "LGPL-3.0"
}
