{
  "name": "eth-connect",
  "version": "4.0.0",
  "private": true,
  "description": "Ethereum TypeScript API, middleware to talk to a ethereum node using an async provider",
  "repository": "decentraland/eth-connect",
  "homepage": "https://github.com/decentraland/eth-connect",
  "bugs": "https://github.com/decentraland/eth-connect/issues",
  "keywords": [
    "ethereum",
    "typescript",
    "web3",
    "json-rpc",
    "eth",
    "API"
  ],
  "license": "LGPL-3.0",
  "files": [
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/dist/**",
      "**/test/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "dependencies": {
    "bignumber.js": "^7.0.1",
    "crypto-js": "^3.1.9-1",
    "decentraland-rpc": "^3.1.6",
    "fp-future": "^1.0.1",
    "isomorphic-fetch": "^2.2.1",
    "utf8": "^3.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.3",
    "dcl-tslint-config-standard": "^1.1.0",
    "ganache-cli": "^6.4.1",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "source-map-support": "^0.5.11",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.4.1",
    "websocket": "^1.0.28"
  }
}
