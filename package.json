{
  "name": "eth-connect",
  "version": "6.0.0",
  "private": true,
  "description": "Ethereum TypeScript API, middleware to talk to a ethereum node using an async provider",
  "decentralandLibrary": {},
  "repository": "decentraland/eth-connect",
  "homepage": "https://github.com/decentraland/eth-connect",
  "bugs": "https://github.com/decentraland/eth-connect/issues",
  "scripts": {
    "lint:check": "eslint '**/*.{js,ts}'",
    "lint:fix": "eslint '**/*.{js,ts}' --fix"
  },
  "keywords": [
    "ethereum",
    "typescript",
    "web3",
    "json-rpc",
    "eth",
    "API"
  ],
  "license": "LGPL-3.0",
  "files": [
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/dist/**",
      "**/test/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "devDependencies": {
    "@dcl/eslint-config": "^1.1.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
