{
  "name": "eth-connect",
  "version": "6.0.0",
  "private": true,
  "description": "Ethereum TypeScript API, middleware to talk to a ethereum node using an async provider",
  "decentralandLibrary": {},
  "repository": "decentraland/eth-connect",
  "homepage": "https://github.com/decentraland/eth-connect",
  "bugs": "https://github.com/decentraland/eth-connect/issues",
  "keywords": [
    "ethereum",
    "typescript",
    "web3",
    "json-rpc",
    "eth",
    "API"
  ],
  "license": "LGPL-3.0",
  "files": [
    "dist"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "none"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/dist/**",
      "**/test/**"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@microsoft/api-documenter": "^7.13.7",
    "@microsoft/api-extractor": "^7.13.2",
    "@types/mocha": "^8.2.1",
    "bignumber.js": "^9.0.1",
    "coveralls": "^3.1.0",
    "dcl-tslint-config-standard": "^3.0.0",
    "expect": "^26.6.2",
    "fp-future": "^1.0.1",
    "ganache-cli": "^6.12.2",
    "isomorphic-fetch": "^3.0.0",
    "js-sha3": "^0.8.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "rollup": "^2.55.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "tslint-language-service": "^0.9.9",
    "typescript": "^4.2.3",
    "websocket": "^1.0.33"
  }
}
